<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>TKKN_PlantWildRice</defName>
		<label>wild rice plant</label>
		<description>Wild rice is hardy and grows in shallow water. It yeilds less rice than it's domesticated version.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.18</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/RicePlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible/>
		<plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<maxMeshCount>4</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawRice</harvestedThingDef>
			<harvestYield>3</harvestYield>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3</growDays>
         <visualSizeRange>0.2~0.6</visualSizeRange>
		</plant>
	</ThingDef>
  
  
   <!-- Savanna and Grasslands -->
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeBaobab</defName>
      <label>baobab tree</label>
      <description>Long lived tree that store water in their trunks.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeBaobab</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <leaflessGraphicPath>TKKN_NPS/Things/Plant/VarientLeafless/TreeBaobab_Leafless</leaflessGraphicPath>
         <growDays>60</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>75</harvestYield>
			<wildClusterWeight>10</wildClusterWeight>
         <wildClusterRadius>5</wildClusterRadius>
         <visualSizeRange>2~4</visualSizeRange>

      </plant>
   </ThingDef>
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeAcacia</defName>
      <label>umbrella thorn acacia tree</label>
      <description>Hardy plant known to tolerate high alkalinity, drought, high temperatures, sandy and stony soils, strongly sloped rooting surfaces, and sand blasting.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeAcacia</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <growDays>30</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>50</harvestYield>
			<wildClusterWeight>20</wildClusterWeight>
         <wildClusterRadius>5</wildClusterRadius>
      </plant>
   </ThingDef>
   
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeGum</defName>
      <label>gum tree</label>
      <description>Smooth barked, fast growing tree that guzzles water and repells insects.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeGum</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <growDays>15</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>30</harvestYield>
			<wildClusterWeight>30</wildClusterWeight>
         <wildClusterRadius>5</wildClusterRadius>
         <visualSizeRange>1~1.7</visualSizeRange>

      </plant>

   </ThingDef>
   <ThingDef ParentName="BushBase">
      <defName>TKKN_PlantSunflower</defName>
      <label>giant sunflower</label>
      <description>A tall flower named because it turns its face to follow the sun.</description>
      <statBases>
         <MaxHitPoints>85</MaxHitPoints>
         <Beauty>4</Beauty>
      </statBases>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/Sunflower</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <hideAtSnowDepth>0.5</hideAtSnowDepth>
      <ingestible/>
      <plant>
         <fertilitySensitivity>0.5</fertilitySensitivity>
         <growDays>2.5</growDays>
         <sowTags>
            <li>Ground</li>
         </sowTags>
         <fertilityMin>0.5</fertilityMin>
         <visualSizeRange>0.6~0.85</visualSizeRange>
         <topWindExposure>0.3</topWindExposure>
		<wildClusterWeight>40</wildClusterWeight>
         <wildClusterRadius>10</wildClusterRadius>
      </plant>
   </ThingDef>
   
    <ThingDef ParentName="PlantBase">
      <defName>TKKN_PlantTallGrasses</defName>
      <label>Tall Prairie Grasses</label>
      <description>A mix of hardy prairie grasses, like purple needlegrass, wild oats, foxtail, ryegrass, and buffalo grass.</description>
      <statBases>
         <MaxHitPoints>150</MaxHitPoints>
         <Beauty>2</Beauty>
		 <Nutrition>0.25</Nutrition>
      </statBases>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TallGrasses</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <hideAtSnowDepth>0.6</hideAtSnowDepth>
      <ingestible/>
      <plant>
         <fertilitySensitivity>.5</fertilitySensitivity>
         <growDays>2.5</growDays>
         <fertilityMin>0.5</fertilityMin>
         <maxMeshCount>25</maxMeshCount>
         <visualSizeRange>1~1.5</visualSizeRange>
         <topWindExposure>0.6</topWindExposure>
			<wildClusterWeight>100</wildClusterWeight>
         <wildClusterRadius>6</wildClusterRadius>
      </plant>
   </ThingDef>
</Defs>